{
  "manifest_version": 3,
  "name": "Phishing Detector (Dual-AI)",
  "version": "1.0.0",
  "description": "Detects phishing content in selected text using a local API.",
  "action": {
    "default_title": "Phishing Detector",
    "default_popup": "popup.html"
  },
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["http://127.0.0.1:8000/*"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
